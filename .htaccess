# --- SECURITY: Block vendor access ---
<IfModule mod_authz_core.c>
  <DirectoryMatch "^.*/vendor/">
    Require all denied
  </DirectoryMatch>
</IfModule>
# --- Block direct access to .env and other sensitive files ---
<FilesMatch "^(\.env|\.env\.example|composer\.(json|lock)|phpunit\.xml|error_log)$">
  Require all denied
</FilesMatch>
# EÄŸer DirectoryMatch Ã§alÄ±ÅŸmÄ±yorsa (bazÄ± hostinglerde), aÅŸaÄŸÄ±daki Rewrite yÃ¶ntemi garanti olur:
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^vendor/ - [F,L]
</IfModule>

RewriteEngine On
RewriteBase /

DirectoryIndex index.php

# GERÃ‡EK dosya veya klasÃ¶r varsa DOKUNMA
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# .php uzantÄ±sÄ±nÄ± gizle (sadece varsa)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# index.php veya index -> /
RewriteCond %{THE_REQUEST} \s/+index(\.php)?[\s?]
RewriteRule ^index(\.php)?$ / [R=301,L]

# .php ile direkt eriÅŸimi temiz URL'ye yÃ¶nlendir
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?]
RewriteRule ^ %1 [R=301,L]

# BURASI KRÄ°TÄ°K ðŸ‘‡
# YukarÄ±dakilerin HÄ°Ã‡BÄ°RÄ°NE uymayan her ÅŸey = 404
RewriteRule ^.*$ /404.php [L]

ErrorDocument 404 /404.php

<IfModule mime_module>
  AddHandler application/x-httpd-ea-php81 .php .php8 .phtml
</IfModule>
